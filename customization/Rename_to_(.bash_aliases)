#
# Spoob aliases
#

# -----ls aliases-----

alias ls='ls -F'
alias la='ls -a'
alias ll='ls -lh'
alias lla='ll -a'
alias lal='lla'

alias ld='ls */'
alias lad='la */'
alias lda='la */'

# ---konsole aliases---

alias fork='nohup konsole > /dev/null 2>&1 & disown'

# -----git aliases-----

alias gcm='git commit -m'
alias gp='git push'
alias gst='git status'

